<h1>Teachers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Emp ID</th>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.emp_id %></td>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.middle_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.dob %></td>
        <td><%= teacher.age %></td>
        <td><%= link_to 'Show', teacher, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New teacher', new_teacher_path, class: "btn btn-default" %>
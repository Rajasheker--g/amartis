<div class="container">
  <div class="row">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(@user, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group col-xs-10 col-sm-4 col-md-4 col-lg-4">
        <%= label_tag :roles %><br />
        <%= select_tag "roles", options_for_select(["admin", "parent", "student"], @user.roles.last.name), {prompt: "Please Select", class: "form-control"} %>
      </div>

      <div class="clearfix"></div>
      <div class="col-xs-10">
        <%= f.submit "Update", class: "btn btn-default" %>
        <%= link_to "Back", :back, class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>

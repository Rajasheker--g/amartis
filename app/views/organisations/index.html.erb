<h1>Organisations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Org name</th>
      <th>Org code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td><%= organisation.org_name %></td>
        <td><%= organisation.org_code %></td>
        <td><%= link_to 'Show', organisation, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_organisation_path(organisation), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', organisation, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organisation', new_organisation_path, class: "btn btn-default" %>
